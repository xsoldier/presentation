<ul>
  <% if Admin::EventsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_events_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('plugins.events.index.create_new'), new_admin_event_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::EventsController.sortable? and Event.count > 1 %>
  <li>
    <%= link_to t('plugins.events.index.reorder', :what => "Events"),
                 admin_events_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('plugins.events.index.reorder_done', :what => "Events"),
                 admin_events_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>