<%= form_for [:admin, @event] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @event,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name, t("plugins.events.form.name") -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :event_date, t("plugins.events.form.event_date") -%>
    <%= f.date_select :event_date, :class => "datepicker"  -%>
  </div>
  
  <div class='field'>
    <%= f.label :image, t("plugins.events.form.image") -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :image_id,
          :image => @event.image,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :file, t("plugins.events.form.file") -%>
    <%= render :partial => "/shared/admin/resource_picker", :locals => {
          :f => f,
          :field => :file_id,
          :resource => @event.file,
        } %>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:text].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:text].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.events.event'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @event.name)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>

