<% content_for :body_content_title do %>
  <%= @event.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @event.name %>
    </p>
  </section>
  <section>
    <h1>Event Date</h1>
    <p>
      <%=raw @event.event_date %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @event.image, nil %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <%= link_to 'file', @event.file.url if @event.file.present? %>
    </p>
  </section>
  <section>
    <h1>Text</h1>
    <p>
      <%=raw @event.text %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.name, event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
